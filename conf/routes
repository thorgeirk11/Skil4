# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.UserController.index()

# Sign Up
GET     /signUp                     controllers.UserController.signUp()
POST    /signUp                     controllers.UserController.signUpSubmit()

#Login
GET     /login                      controllers.UserController.login()
POST    /login                      controllers.UserController.loginSubmit()

#FrontPage
GET     /frontpage                  controllers.UserController.index()

#Board
GET     /boards                     controllers.BoardController.boards(userName: String)
GET     /board/:id                  controllers.BoardController.board(id: Long)

#AddPin
GET     /board/addPin/:id            controllers.BoardController.addPin(id: Long)
POST    /board/addPinSubmit/:id      controllers.BoardController.addPinSubmit(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
